{
  "$schema":"http://bigcontent.io/cms/schema/v1/schema#",
  "id":"https://raw.githubusercontent.com/elmikegonzalez/dc-examples/master/content-types/blocks/localized-imageblock.json",

  "title":"Localized Image Block",
  "description":"A page block element that can display an image, a localized text overlay and a call to action",
  "allOf":[
    {
      "$ref":"http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],

  "type":"object",
  "properties":{

    "image": { "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link" },
    "locale": {
        "type": "array",
        "items": {
            "type": "string",
            "enum": [
                      "en_US"
                    ]
                },
              },
        "editorial": { "$ref": "../mixins/editorial.json#" },

        "aspectRatio": { "$ref": "../mixins/aspect-ratio.json#" },
  "propertyOrder": ["image","locale","editorial","aspectRatio"]
}
